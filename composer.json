{
    "name": "kartavik/yii2-enum",
    "description": "Yii2 enum mapping behavior / validator / database internal type",
    "type": "library",
    "require": {
        "php": "^7.1",
        "myclabs/php-enum": "^1.6",
        "yiisoft/yii2": "^2.0.13",
        "yidas/yii2-composer-bower-skip": "~2.0.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Roman Varkuta",
            "email": "roman.varkuta@gmail.com",
            "role": "Developer"
        }
    ],
    "keywords": [
        "yii2",
        "enum",
        "validator",
        "mapping",
        "behavior",
        "migration",
        "type",
        "mysql",
        "pgsql",
        "column"
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Kartavik\\Yii2\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kartavik\\Yii2\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.1"
        }
    },
    "scripts": {
        "lint": "phpcs --standard=PSR2 ./src ./tests",
        "phpcbf": "phpcbf --standard=PSR2 ./src ./tests",
        "cover": "phpunit --coverage-clover=coverage.xml",
        "test": "phpunit",
        "build": [
            "@lint",
            "@cover"
        ]
    },
    "require-dev": {
        "kartavik/yii2-phpunit": "^1.0",
        "sam-it/yii2-mariadb": "^1.1",
        "squizlabs/php_codesniffer": "^3.4",
        "vlucas/phpdotenv": "^3.3"
    },
    "suggest": {
        "horat1us/yii2-base": "For better validation for ranges of const values",
        "sam-it/yii2-mariadb": "For better MariaDB support"
    }
}
